{
  "name": "QuACS",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "./build_wasm.sh debug && vue-cli-service serve",
    "build": "./build_wasm.sh && vue-cli-service build",
    "debug-build": "./build_wasm.sh debug && vue-cli-service build",
    "lint": "vue-cli-service lint",
    "gh-pages-deploy": "sh scripts/gh-pages-deploy.sh"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-brands-svg-icons": "^5.14.0",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/vue-fontawesome": "^0.1.10",
    "@trevoreyre/autocomplete-vue": "^2.2.0",
    "axios": "^0.19.2",
    "bootstrap": "^4.5.0",
    "bootstrap-vue": "^2.15.0",
    "fuse.js": "^6.4.1",
    "register-service-worker": "^1.7.1",
    "simple-web-worker": "^1.2.0",
    "vue": "^2.6.11",
    "vue-async-computed": "^3.8.2",
    "vue-axios": "^2.1.5",
    "vue-class-component": "^7.2.5",
    "vue-property-decorator": "^9.0.0",
    "vue-router": "^3.3.4",
    "vuex": "^3.5.1",
    "vuex-persistedstate": "^3.0.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.10.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/cli-plugin-eslint": "~4.4.6",
    "@vue/cli-plugin-pwa": "~4.4.6",
    "@vue/cli-plugin-router": "~4.4.6",
    "@vue/cli-plugin-typescript": "~4.4.6",
    "@vue/cli-plugin-vuex": "~4.4.6",
    "@vue/cli-service": "~4.4.6",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "eslint": "^7.5.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^6.2.2",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "sass": "^1.26.10",
    "sass-loader": "^9.0.2",
    "typescript": "~3.9.7",
    "vue-template-compiler": "^2.6.11",
    "vuex-module-decorators": "^0.17.0",
    "workerize-loader": "^1.3.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "ignorePatterns": [
      "src/quacs-rs/**"
    ],
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "array-callback-return": "warn",
      "block-scoped-var": "error",
      "curly": [
        "warn",
        "all"
      ],
      "dot-notation": "warn",
      "eqeqeq": "warn",
      "init-declarations": "error",
      "no-alert": "warn",
      "no-caller": "error",
      "no-confusing-arrow": "warn",
      "no-console": "warn",
      "no-duplicate-imports": "warn",
      "no-eq-null": "warn",
      "no-eval": "error",
      "no-floating-decimal": "warn",
      "no-implicit-coercion": "warn",
      "no-implied-eval": "error",
      "no-lone-blocks": "warn",
      "no-multi-spaces": "warn",
      "no-new": "warn",
      "no-new-wrappers": "warn",
      "no-param-reassign": "warn",
      "no-script-url": "error",
      "no-self-compare": "warn",
      "no-sequences": "warn",
      "no-shadow": "warn",
      "no-template-curly-in-string": "warn",
      "no-undef-init": "warn",
      "no-unused-expressions": "warn",
      "no-use-before-define": "warn",
      "no-useless-computed-key": "warn",
      "no-useless-concat": "warn",
      "no-useless-rename": "warn",
      "no-var": "error",
      "sort-imports": [
        "warn",
        {
          "ignoreDeclarationSort": true
        }
      ],
      "vars-on-top": "warn",
      "@typescript-eslint/ban-ts-comment": [
        "error",
        {
          "ts-ignore": "allow-with-description",
          "ts-expect-error": "allow-with-description"
        }
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "gitHooks": {
    "post-checkout": "yarn install --frozen-lockfile",
    "post-merge": "yarn install --frozen-lockfile",
    "pre-commit": "yarn install --frozen-lockfile && lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint --max-warnings 0"
    ]
  }
}
