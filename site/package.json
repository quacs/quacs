{
  "name": "QuACS",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "./scripts/build_entry.sh -d",
    "build": "./scripts/build_entry.sh -b",
    "debug-build": "./scripts/build_entry.sh -d -b",
    "lint": "./scripts/lint.sh",
    "gh-pages-deploy": "sh scripts/gh-pages-deploy.sh",
    "postinstall": "cd .. && husky install site/.husky"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/vue-fontawesome": "^2.0.2",
    "@trevoreyre/autocomplete-vue": "^2.2.0",
    "@types/file-saver": "^2.0.3",
    "axios": "^0.23.0",
    "bootstrap": "^4.6.0",
    "bootstrap-vue": "^2.21.2",
    "file-saver": "^2.0.5",
    "fuse.js": "^6.4.6",
    "ics": "^2.31.0",
    "register-service-worker": "^1.7.2",
    "simple-web-worker": "^1.2.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "tslib": "^2.3.1",
    "vue": "^2.6.14",
    "vue-async-computed": "^3.9.0",
    "vue-axios": "^3.3.7",
    "vue-class-component": "^7.2.6",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.5.2",
    "vue-visjs": "^0.6.0",
    "vuex": "^3.6.2",
    "vuex-persistedstate": "^4.1.0",
    "xss": "^1.0.10"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.32.0",
    "@vue/cli-plugin-eslint": "~4.5.7",
    "@vue/cli-plugin-pwa": "~4.5.14",
    "@vue/cli-plugin-router": "~4.5.10",
    "@vue/cli-plugin-typescript": "~4.5.13",
    "@vue/cli-plugin-vuex": "~4.5.10",
    "@vue/cli-service": "~4.5.14",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-vue": "^7.19.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.0",
    "prettier": "^2.4.1",
    "sass": "^1.43.2",
    "sass-loader": "^10.2.0",
    "typescript": "~4.4.3",
    "vue-template-compiler": "^2.6.14",
    "vuex-module-decorators": "^1.0.1",
    "workerize-loader": "^1.3.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "ignorePatterns": [
      "src/quacs-rs/**"
    ],
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "no-console": "warn",
      "@typescript-eslint/ban-ts-comment": [
        "error",
        {
          "ts-ignore": "allow-with-description",
          "ts-expect-error": "allow-with-description"
        }
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx,json}": [
      "vue-cli-service lint --max-warnings 0"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  }
}
