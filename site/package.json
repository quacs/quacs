{
  "name": "QuACS",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "./scripts/build_entry.sh -d",
    "build": "./scripts/build_entry.sh -b",
    "debug-build": "./scripts/build_entry.sh -d -b",
    "lint": "./scripts/lint.sh",
    "gh-pages-deploy": "sh scripts/gh-pages-deploy.sh"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-brands-svg-icons": "^5.15.2",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/vue-fontawesome": "^2.0.2",
    "@trevoreyre/autocomplete-vue": "^2.2.0",
    "@types/file-saver": "^2.0.1",
    "axios": "^0.21.1",
    "bootstrap": "^4.6.0",
    "bootstrap-vue": "^2.21.2",
    "file-saver": "^2.0.5",
    "fuse.js": "^6.4.6",
    "ics": "^2.27.0",
    "moment-timezone": "^0.5.33",
    "register-service-worker": "^1.7.2",
    "simple-web-worker": "^1.2.0",
    "vue": "^2.6.12",
    "vue-async-computed": "^3.9.0",
    "vue-axios": "^3.2.4",
    "vue-class-component": "^7.2.6",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.5.1",
    "vue-visjs": "^0.4.2",
    "vuex": "^3.6.2",
    "vuex-persistedstate": "^3.2.0",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vue/cli-plugin-eslint": "~4.5.7",
    "@vue/cli-plugin-pwa": "~4.5.12",
    "@vue/cli-plugin-router": "~4.5.10",
    "@vue/cli-plugin-typescript": "~4.5.12",
    "@vue/cli-plugin-vuex": "~4.5.10",
    "@vue/cli-service": "~4.5.12",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "eslint": "^7.22.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.7.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "sass-loader": "^10.1.1",
    "typescript": "~4.1.5",
    "vue-template-compiler": "^2.6.12",
    "vuex-module-decorators": "^1.0.1",
    "workerize-loader": "^1.3.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "ignorePatterns": [
      "src/quacs-rs/**"
    ],
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "no-console": "warn",
      "@typescript-eslint/ban-ts-comment": [
        "error",
        {
          "ts-ignore": "allow-with-description",
          "ts-expect-error": "allow-with-description"
        }
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "gitHooks": {
    "post-checkout": "yarn install --frozen-lockfile",
    "post-merge": "yarn install --frozen-lockfile",
    "pre-commit": "yarn install --frozen-lockfile && lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint --max-warnings 0"
    ]
  }
}
